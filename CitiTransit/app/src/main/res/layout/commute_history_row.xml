<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_origin"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_origin_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="from_address"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/history_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_address"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_time_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12dp"
            android:layout_marginRight="25dp"/>

        <TextView
            android:id="@+id/history_cost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="money"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
